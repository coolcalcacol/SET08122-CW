{
    "compilerOptions": {
        "composite": true,
        "outDir": "dist",
        "rootDir": "src",
        "target": "ES2022",
        "module": "NodeNext",
        "lib": ["ESNext", "dom"],
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "NodeNext",
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "downlevelIteration": true,
    }
}
